#include "main.h"

/**
 * print_line - prints '_' for n times
 * @n: number of times to print '_'
 * Return: draws a trail line
 */
void print_line(int n)
{
	int LINE;

	if (n <= 0)
	{
		_putchar('\n');
	}
	else
	{
		for (LINE = 1; LINE <= n; LINE++)
		{
			_putchar('_');
		}
		_putchar('\n');
	}
}
